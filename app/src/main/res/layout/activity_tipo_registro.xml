<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TipoRegistro"
    android:orientation="vertical"
    android:padding="40dp">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:src="@drawable/logo_blanco2"
        android:layout_marginHorizontal="18dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â¡Bienvenido!"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:textColor="#42137c"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/registroPaciente"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:onClick="registroPaciente"
        android:text="Registrarse como paciente"
        app:backgroundTint="#42137c"
        android:textColor="@color/white"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/registroTerapeuta"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:onClick="registroTerapeuta"
        android:text="Registrarse como terapeuta"
        app:backgroundTint="#42137c"
        android:textColor="@color/white"/>

</LinearLayout>